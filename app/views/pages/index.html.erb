<h1>Pages#index</h1>


<% if user_signed_in? %>
	<%= form_with model: @activity, url: asigne_activity_path(current_user), method: :post, local: true do |f| %>

		<%= f.label :activity %>
		
		<%= f.collection_select :activity_id, Activity.all, :id, :name, :prompt => true %>

		<%= f.submit "Enviar" %>

	<% end %>
<% end %>

<br><br>

<% @users.each do |user| %>
	<%= link_to user.name, user_page_path(user) %><br>
<% end %>